{% extends 'template.html.twig' %}

{% block central %}
  

  <h1>My WISH</h1>
  
<table class="table">
  <tr> 
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Author</th>
    <th scope="col">Date de cr√©ation</th>
    <th scope="col">modify</th>
    <th scope="col">Delete</th>
  </tr>
  {% for w in wishes %}
  <tr>
    <td>{{w.title }}</td>
    <td>{{w.description }}</td>
    <td>{{w.author }}</td>
    <td>{{w.dateCreated|date("m/d/Y, H:i:s")}}</td>
		<td>
			<a href="{{ path('modifyMyWish',{id : w.id })}}" class="btn btn-outline-warning">
				<i class="fas fa-edit"></i>
			</a>
		</td>
		<td>
			<a onclick="return confirm('Supprimer :{{ w.title }} ?')" href="{{ path('deleteMyWish',{id : w.id })}}" class="btn btn-danger">
				<i class="fas fa-trash"></i>
			</a>
		</td>
  </tr>
  {% endfor %}
</table>


  
  
{% endblock %}
